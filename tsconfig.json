{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react-jsx",
    "target": "esnext",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "ts/**/*.ts",
    "ts/**/*.tsx",
    "types/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
